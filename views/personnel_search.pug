extends layout

block content
    h1.title_1 직원 관리
    // main 시작
    div.main
        //main_content navbar
        div.main_nav
            nav.navbar.navbar-light.bg-light
            .container-fluid
                a.main_a.navbar-brand(href='personnel_information') 인사 정보 등록
                a.main_a.navbar-brand(href='personnel_modify') 인사 정보 수정
                a.main_a.navbar-brand(href='personnel_search') 인사 정보 조회
                a.main_a.navbar-brand(href='/dept_info') 부서 조회
        //main_content 
        div.main_conent
            h3.title_2 인사 정보 조회
            //검색창 시작
            form.row.row-cols-lg-auto.g-3.align-items-center
                .col-2 
                    label 검색어
                .col-3
                    select.searchhr
                      option(values =emp_id) 사번
                      option(values =enp_name) 직원 이름
                .col-4
                    input#inlineFormSelectPref.form-control(type='text')
                .col-2
                    button.btn.btn-primary(type='submit') 조회
            //table 시작
            table.table.emp
              tr
                th 이름
                td#emp_name
                th 사번
                td#emp_id 
              tr
                th 주민등록 번호
                td#emp_ihidnum
                th 재직 여부
                td#in_office
              tr
                th 생년월일
                td#birth
                th 입사일자
                td#join_day
              tr
                th 휴대폰 번호
                td#telno
                th 퇴사 일자
                td#end_day
              tr
                th 회사이메일
                td#email
                th 최종학력
                td#final_graduate
            table.table.project 
              thead 
                tr 
                  th 프로젝트 ID 
                  th 프로젝트 이름
                  th 직무
                  th 프로젝트 참여일
                  th 프로젝트 종료일
              tbody
            table.table.career
              thead 
                tr
                  th 경력ID 
                  th 시작일
                  th 종료일
                  th 경력명
                  th 내용
              tbody#table1 
            table.table.skill
              thead 
                tr 
                  th 기술 ID 
                  th 기술 이름
                  th 기술 등급
                  th 기술 내용
            script
                include dynamic_table.js

            


              
